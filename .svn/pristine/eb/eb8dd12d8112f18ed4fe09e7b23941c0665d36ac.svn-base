.bc-textimage,
.textimage_text {

    // HEADINGS
    // ====================================================

    h1 {
        font-size: em-calc(28);
        color: $blue-darker;
        line-height: 1.286;
        // 36
        margin-top: 0 !important;

        @media #{$small} {
            font-size: em-calc(38);
            line-height: 1.16;
            // 44
        }
        @media #{$medium} {
            font-size: em-calc(48);
            line-height: 1.167;
            // 56
        }
    }

    h2 {
        font-size: em-calc(24);
        color: $blue-darker;
        line-height: 1.25;
        margin-top: 0 !important;
        // 30
        @media #{$small} {
            font-size: em-calc(30);
            line-height: 1.2;
            // 36
        }
        @media #{$medium} {
            font-size: em-calc(36);
            line-height: 1.17;
            // 42
        }
    }
    
    h3 {
        font-family: $header-font-family-regular;
        font-size: em-calc(20);
        color: $blue-darker;
        line-height: 1.2;
        // 24
        margin-top: 0 !important;

        @media #{$small} {
            font-size: em-calc(24);
            line-height: 1.25;
            // 30
        }
        @media #{$medium} {
            font-size: em-calc(28);
            line-height: 1.286;
            // 36
        }
    }

    h4 {
        font-family: $header-font-family-regular;
        font-size: em-calc(20);
        color: $blue-darker;
        line-height: 1.2;
        margin-top: 0 !important;
        // 24

        @media #{$small} {
            font-size: em-calc(22);
            line-height: 1.185;
            // 26
        }
        @media #{$medium} {
            font-size: em-calc(22);
            line-height: 1.185;
            // 26
        }
    }

    h5 {
        font-family: $header-font-family-regular;
        font-size: em-calc(16);
        color: $blue-darker;
        line-height: 1.13;
        // 18
        margin-top: 0 !important;

        @media #{$small} {
            font-size: em-calc(18);
            line-height: 1.115;
            // 20
        }

        @media #{$medium} {
            font-size: em-calc(18);
            line-height: 1.115;
            // 20
        }
    }

    h6 {
        font-family: $header-font-family-bold;
        font-size: em-calc(14);
        color: $blue-darker;
        line-height: 1.29;
        // 18
        margin-top: 0 !important;

        @media #{$small} {
            font-family: $header-font-family-regular;
            font-size: em-calc(16);
            line-height: 1.13;
            // 18
        }
    }


    // PARAGRAPHS
    // ====================================================

    p {
        font-size: em-calc(13);
        line-height: 1.4;
        // 18
        &.dark-blue {
            color: $blue-darker;
        }
    }

    .intro {
        font-size: em-calc(18);
        line-height: 1.335;
        // 24
        font-family: $header-font-family;
// WRONG
        @media #{$small} {
            font-size: em-calc(20);
            line-height: 1.3;
            // 26
        }
        @media #{$medium} {
            font-size: em-calc(22);
            line-height: 1.365;
            // 30
        }
    }

    .footnote {
        font-size: em-calc(10);
        color: $gray-info;
        line-height: 1.5;
    }

    .article {
        color: $gray;
        font-size: em-calc(13);
        line-height: 1.55;
        // 20

        @media #{$small} {
            font-size: em-calc(14);
            line-height: 1.43;
            // 20
        }
        @media #{$medium} {
            font-size: em-calc(14);
            line-height: 1.43;
            // 20
        }
    }

    .label {
        font-family: $header-font-family-regular;
        color: $gray-info;
        font-size: em-calc(13);
        line-height: 1.4;
        // 18
    }

    .description_cyan {
        color: $blue-lighter;
        font-family: $header-font-family;
        font-size: em-calc(13);
        line-height: 1.35;
        // 18

        @media #{$small} {
            font-size: em-calc(14);
            line-height: 1.29;
            // 18
        }
        // 
        @media #{$medium} {
            font-size: em-calc(14);
            line-height: 1.29;
            // 18
        }
    }

    .description_dark-blue {
        color: $blue-darker;
        font-family: $header-font-family;
        font-size: em-calc(13);
        line-height: 1.35;

        @media #{$small} {
            font-size: em-calc(14);
            line-height: 1.29;
            // 18
        }
        @media #{$medium} {
            font-size: em-calc(14);
            line-height: 1.29;
            // 18
        }
    }

    .large-text, 
    .large-text_dark-blue {
        font-family: $header-font-family;
        color: $blue-lighter;
        font-size: em-calc(36);
        line-height: 1.112;
        // 40

        @media #{$small} {
            font-size: em-calc(36);
            line-height: 1.112;
            // 40
        }
        @media #{$medium} {
            font-size: em-calc(48);
            line-height: 1.042;
            // 52
        }
    }

    .large-text_dark-blue {
        color: $blue-darker;
    }

    // IMAGES
    // ====================================================

    img {
        margin-bottom: em-calc(20);
    }
}
