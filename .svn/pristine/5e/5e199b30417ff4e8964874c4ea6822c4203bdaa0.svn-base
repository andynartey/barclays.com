// Hero Hub

.hero__hubImage {
	position: relative;
	h1 {
		color: $blue-darker;
		font-size: em-calc(30);
		font-family: $header-font-family;
	}
	p {
		font-size: em-calc(16);
		font-family: $header-font-family;
	}
	.aperture__content {
		padding: em-calc(5 0);
		margin-bottom: em-calc(25);
		img {
			width: 100%;
		}
		@media #{$large} {
			margin-left: em-calc(-110);
			margin-right: em-calc(-110);
		}
	}
}

@media #{$small} {
.hero__hubImage {
		h1 {
			font-size: em-calc(48);
		}
		p {
			font-size: em-calc(22);
		}
	}
}

@media #{$medium} {
.hero__hubImageTextLeft {
	position: absolute;
	top: 20%;
	right: 40%;
	left: 7%;
	z-index: 5;
	h1, p {
			color: $white;
		}
	}
}
@media #{$large} {
.hero__hubImage {
	h1 {
		font-size: em-calc(48);
		}
	p {
		font-size: em-calc(22);
		}
	}
.hero__hubImageTextLeft {
		position: absolute;
		top: 25%;
		right: 60%;
		left: 0;
		z-index: 5;
		h1, p {
			color: $white;
		}
	}
}

// Hero Sub-hub - Aperture Inset

.hero__subHub {
	position: relative;
	h1 {
		color: $blue-darker;
		font-size: em-calc(30);
		font-family: $header-font-family;
	}
	p {
		font-size: em-calc(16);
		font-family: $header-font-family;
	}
	.hero__image-wide {
		padding: em-calc(5 0);
		margin-bottom: em-calc(25);
	}
	margin-bottom: em-calc(30);
}

@media #{$small} {
.hero__subHub {
		h1 {
			font-size: em-calc(48);
		}
		p {
			font-size: em-calc(22);
		}
		overflow: hidden;
	}
}

@media #{$medium} {
.hero__subHub {
		h1 {
			font-size: em-calc(48);
		}
		p {
			font-size: em-calc(22);
		}
		margin: em-calc(0 0 10);
		overflow: hidden;
	}
.hero__subHubApertureInset {
		position: absolute;
		top: 15%;
		left: 50%;
		right: 5%;
		z-index: 5;
	}
}
@media #{$large} {
.hero__subHub {
		h1 {
			font-size: em-calc(48);
		}
		p {
			font-size: em-calc(22);
		}
		img {
			width: 100%;
		}
		min-height: em-calc(450);
		margin: em-calc(0 -110 10);
	}
.hero__subHubApertureInset {
		position: absolute;
		top: 20%;
		left: 51%;
		right: 9%;
		z-index: 5;
	}
}

// Level 3 Heading

.level-3-heading {
	h1 {
		font-size: em-calc(30);
		font-family: $header-font-family;
		color: $blue-darker;
	}
	p {
		font-size: em-calc(16);
		font-family: $header-font-family;
	}
	.icon__chevron-left:after {
		margin: 0;
	} 
	margin-bottom: em-calc(20);
	@media #{$medium} {
		h1 {
			font-size: em-calc(48);
		}
		p {
			font-size: em-calc(22);
		}
	}
}
.level-3-sub-heading {
	text-transform: uppercase;
	font-size: em-calc(18);
	font-family: "Expert-Sans-Regular";
	margin-bottom: 0.5em;
	display: inline-block;
}
