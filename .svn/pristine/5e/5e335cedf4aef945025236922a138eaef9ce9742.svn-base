.text-image {

    // HEADINGS
    // ====================================================

    h1 {
        font-size: em-calc(28);
        color: $blue-darker;
        line-height: 1.29;
        margin-top: 0 !important;

        @media #{$small} {
            font-size: em-calc(48);
            line-height: 1.17;
        }
    }

    h2 {
        font-size: em-calc(22);
        color: $blue-darker;
        line-height: 1.365;
        margin-top: 0 !important;

        @media #{$small} {
            font-size: em-calc(36);
            line-height: 1.23;
        }
    }

    h3 {
        font-family: $header-font-family-regular;
        font-size: em-calc(18);
        color: $blue-darker;
        line-height: 1.34;
        margin-top: 0 !important;

        @media #{$small} {
            font-size: em-calc(28);
            line-height: 1.3;
        }
    }

    h4 {
        font-family: $header-font-family-regular;
        font-size: em-calc(16);
        color: $blue-darker;
        line-height: 1.38;
        margin-top: 0 !important;

        @media #{$small} {
            font-size: em-calc(22);
            line-height: 1.37;
        }
    }

    h5 {
        font-family: $header-font-family-regular;
        font-size: em-calc(14);
        color: $blue-darker;
        line-height: 1.45;
        margin-top: 0 !important;

        @media #{$small} {
            font-size: em-calc(18);
            line-height: 1.35;
        }
    }

    h6 {
        font-family: $header-font-family-bold;
        font-size: em-calc(13);
        color: $blue-darker;
        line-height: 1.4;
        margin-top: 0 !important;

        @media #{$small} {
            font-family: $header-font-family-regular;
            font-size: em-calc(16);
            line-height: 1.27;
        }
    }


    // PARAGRAPHS
    // ====================================================

    p {
        font-size: em-calc(13);
        line-height: 1.4;
    }

    .news {
        font-size: em-calc(13);
        line-height: 1.4;

        @media #{$small} {
            font-size: em-calc(14);
            line-height: 2.15;
        }
    }

    .intro {
        font-size: em-calc(18);
        line-height: 1.35;
        font-family: $header-font-family;

        @media #{$small} {
            font-size: em-calc(22);
            line-height: 1.37;
        }
    }

    .footnote {
        font-size: em-calc(10);
        color: $gray-info;
        line-height: 1.5;
    }

    .blurb {
        font-family: $header-font-family-regular;
        color: $blue-darker;
        text-transform: uppercase;
        font-size: em-calc(13);

        @media #{$small} {
            font-size: em-calc(14);
            text-transform: none;
        }
    }

    .big-numbers {
        font-family: $header-font-family;
        color: $primary-color;
        font-size: em-calc(40);
        margin-bottom: 0;

        @media #{$small} {
            font-size: em-calc(60);
            line-height: 1.2;
        }
    }
}
