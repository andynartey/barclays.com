.detail-wide {
    @include grid-column(12);
    float: none;
    @include clearfix;
}

.detail {
    @include grid-column(12);
    padding-top: 20px;
    position: relative;

    @media #{$small} {
        @include grid-column(10, false, false, 1);
    }

    @media #{$medium} {
        @include grid-column(8);
    }
}

.sub-content {
    @include grid-column(12);

    @media #{$small} {
        @include grid-column(10, false, false, 1);
    }

    @media #{$medium} {
        @include grid-column(3);
        margin-left: 0;
        float: right;
    }
}

.detail-two-col {
    @include grid-column(12);

    @media #{$small} {
        @include grid-column(12);
    }

    @media #{$medium} {
        @include grid-column(6);
    }
}



// template dummy modules
.dummy-module {
    @include clearfix;
    width: 100%;
    padding-top: 1em;
    img {
        margin-bottom: 1em;
    }
}
.template__news-article,
.col__news-feature-content {
    .dummy-module {
        padding-top: 0;
    }
}
.dummy-module__example {
    background: #f6f6f6;
    .dummy-module__content {
        @include grid-column(12);
        float: none;
    }
}
.dummy-module__content {
    margin: 0 auto;
    max-width: 75em;
}


// tempy mocks
