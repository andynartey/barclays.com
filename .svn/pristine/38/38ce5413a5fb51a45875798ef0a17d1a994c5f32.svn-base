// Button styles for forms
form.custom {
	.custom.dropdown.button-container {
		&.medium {
			width: 225px;
		}
		&.open.medium ul {
			min-width: 225px;
			border: $border-style;
			li {
				padding-left: em-calc(15);
			&:hover, &:focus {
				color: $primary-color;
				}
			&:active {
				color: $blue-darker;
				}
			}
		}
		height: auto;
		border: $border-style;
		background: $white;
		font-weight: normal;
		font-size: em-calc(22);
		font-family: $header-font-family-regular;
		box-shadow: 0px 1px #cecece;
		padding: em-calc(0 10 0 10);
		margin-bottom: em-calc(10);
		.current {
			color: $primary-color;
			background-color: $white;
			padding: 0;
			margin: 0;
			line-height: 37px;
		}
		.selector {
			height: em-calc(33);
			border-radius: 4px;
			background-color: $white;
			color: $primary-color;
			&:after {
				border: none;
				@include icon-font($icon-chevron-down);
				top: 12px;
				left: 10px;
				font-size: em-calc(20);
			}
		}
		&:hover, &.open {
			a.selector {
				//border: none;
				&:after {
					border: none;
					@include icon-font($icon-chevron-down);
				}
			}
		}
	}
}
form.custom .custom.checkbox.checked:before {
	content: "\e60e";
	font-family: Icons;
}
