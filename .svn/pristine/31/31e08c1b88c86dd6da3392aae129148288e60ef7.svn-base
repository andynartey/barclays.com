// ====================================================
// HOVER BLOCK
// ====================================================
.hover-block__container {
	margin-bottom: em-calc(20);
	position: relative;

	.flex-control-nav {
		// margin-top: em-calc(30);
	}
}

.carousel-grid__controls {
    display: inline-block;
    padding: 0 2em;
    position: relative;
    .flex-control-nav {
    	width: 100%;
		text-align: center;
		position: relative;
		z-index: 10;
    }
}

.hover-block__item {
	@include grid-column(6);
	position: relative;
	overflow: hidden;
	width: 100%;

	@media #{$medium} {
		@include grid-column(4);
	width: 100%;
		position: relative;
		overflow: hidden;
	}

	.icon {
		display: none;

		&:after {
			font-size: em-calc(13);
		}

		@media #{$medium} {
			position: absolute;
			top: em-calc(8);
			right: 0;
			display: inline-block;
		}
	}
}

.no-js .hover-block__item {
	margin-bottom: em-calc(20);
}

.hover-block__image {
	padding-left: 0;
	padding-right: 0;

	img {
		margin-bottom: 0;
	}
}

.hover-block__desc {
	padding: em-calc(10 10 10 10);
	background-color: $primary-color;
	background-color: rgba(0, 126, 182, 1);
	color: $white;
	position: relative;
	width: 100%;
	bottom: 0;

	@media #{$medium} {
		padding: em-calc(8 15 10 15);
		min-height: em-calc(135);
		position: absolute;
		bottom: auto;
		top: 78%;
		width: -moz-calc(100% - 24px);
		width: -webkit-calc(100% - 24px);
		width: calc(100% - 24px);
		background-color: rgba(0, 126, 182, 0.9);
	}
	@media #{$large} {
		top: 83%;
	}

	a {
		color: $white;
	}

	.icon {
		&:after {
			color: #b8d8e8;
		}
	}
}

.hover-block__heading {
	font-size: em-calc(14);
	font-family: $header-font-family;
	margin: 0;
	color: $white;
	padding-right: 1em;
	
	@media #{$small} {
		font-size: em-calc(20);
	}

	@media #{$medium} {
		font-size: 1.4em;
		padding-top: 0;
		margin-bottom: em-calc(10);
	}

}

.hover-block__paragraph {
	font-size: em-calc(13);
	display: none;

	@media #{$medium} {
		display: block;
	}
}


.hover-block__four_up {

	.hover-block__item {

		@media #{$medium} {
			@include grid-column(3);
	width: 100%;

		}

		.hover-block__desc {
			@media #{$medium} {
				padding: em-calc(8 15 10 15);
				top: 73%;

				.icon {
					&:after {
						margin-left: em-calc(7);
					}
				}
			}
			@media #{$large} {
				top: 80%;
			}
		}

	}
}

.hover-block__three_up, .hover-block__four_up {

	.odd-item {
		padding-right: em-calc(9);

		@media #{$small} {
			padding-right: em-calc(15);
		}
	}

	.even-item {
		padding-left: em-calc(9);

		@media #{$small} {
			padding-left: em-calc(15);
		}
	}

}


// hover animations
.hover-block__item--no-hover .icon {
	display: none;
}
@media #{$medium} {
	.csstransforms {
		.hover-block__heading .icon {
		    -webkit-transition: all 0.25s ease;
		    transition: all 0.25s ease;
		}
		.hover-block__desc {
		    -webkit-transition: all 0.5s ease;
		    transition: all 0.5s ease;
		}
		.hover-block__item--hover {
			.hover-block__heading .icon {
				opacity: 0;
			}
		}
		.hover-block__three_up {
			.hover-block__item--hover {
				.hover-block__desc {
					-webkit-transform: translate(0, -70px);
				}
				&.hover-block__item--no-hover {				
					.hover-block__desc {
						-webkit-transform: none;
					}
				}
			}
		}
		.hover-block__four_up {
			.hover-block__item--hover {
				.hover-block__desc {
					-webkit-transform: translate(0, -60px);
				}
				&.hover-block__item--no-hover {				
					.hover-block__desc {
						-webkit-transform: none;
					}
				}
			}
		}
	}
	.no-csstransforms {
		.hover-block__item--hover {
			.hover-block__heading .icon {
				display: none;
			}
		}
		.hover-block__desc {
			margin-top: 5px;
		}
		.hover-block__three_up {
			.hover-block__item--hover {
				.hover-block__desc {
					margin-top: -80px;
				}
				&.hover-block__item--no-hover {				
					.hover-block__desc {
						margin-top: 0;
					}
				}
			}
		}
		.hover-block__four_up {
			.hover-block__item--hover {
				.hover-block__desc {
					margin-top: -60px;
				}
				&.hover-block__item--no-hover {				
					.hover-block__desc {
						margin-top: 0;
					}
				}
			}
		}
	}

}