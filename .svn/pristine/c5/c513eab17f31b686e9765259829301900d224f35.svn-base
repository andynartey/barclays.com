.country-selector__call-to-action {
	position: relative;
	border: $border-style;
	border-radius: 4px;
	padding: em-calc(8 14 8 8);
	display: block;
	box-shadow: 0px 1px #cecece;
	&:before {		
		@include icon-font($icon-location);
		color: $primary-color;
		margin-right: 0.2em;
	}
}

@media #{$small} {
	.country-selector__call-to-action {
		display: inline-block;
	}
}
@media #{$medium} {
	.country-selector__call-to-action {
		display: inline-block;
	}
}