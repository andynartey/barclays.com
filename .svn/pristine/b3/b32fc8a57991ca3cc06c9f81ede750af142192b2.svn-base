// ====================================================
// COLUMNS CONTROLS
// ====================================================


// TWO COLUMNS -- (50/50)
// ====================================================
.column-control__6 {
    @include grid-column(6);
}

.column-control__6--collapse {
    @include grid-column(12);

    @media #{$medium} {
        @include grid-column(6);
    }
}


// THREE COLUMNS -- (33/33/33)
// ====================================================
.column-control__4 {
    @include grid-column(12);

    @media #{$small} {
        @include grid-column(12);
    }

    @media #{$medium} {
        @include grid-column(4);
    }
}


// FOUR COLUMNS -- (25/25/25)
// ====================================================
.column-control__3 {
    @include grid-column(6);

    @media #{$small} {
        @include grid-column(6);
    }

    @media #{$medium} {
        @include grid-column(3);
    }
}


// TWO COLUMNS -- (25/75)
// ====================================================

.column-control__75 {
    @include grid-column(12);

    @media #{$medium} {
        @include grid-column(9);
    }
}

.column-control__25 {
    @include grid-column(12);

    @media #{$medium} {
        @include grid-column(3);
    }
}

// TWO COLUMNS -- (33/66)
// ====================================================

.column-control__66 {
    @include grid-column(12);

    @media #{$medium} {
        @include grid-column(8);
    }
}

.column-control__33 {
    @include grid-column(12);

    @media #{$medium} {
        @include grid-column(4);
    }
}