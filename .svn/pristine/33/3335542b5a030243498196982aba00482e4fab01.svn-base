.content-switcher {
	@include grid-row(0);
    @include grid-column(12);
    padding-left: 0;
    clear: both;
	float: none;
	margin-bottom: 0;
	@media #{$small} {
		border-top: 1px solid $gray-rule;
	}
	.content-switcher__description {
		@include grid-column(12);
		padding-left: 0;
		@media #{$small} {
			@include grid-column(6);
			padding-left: 0;
		}
	}
	.js-contentSwitcher {
		@include grid-column(12);
		padding-left: 0;
		padding-right: 0;
		@media #{$small} {
			@include grid-column(6);
		}
	}
}