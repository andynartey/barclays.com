#map {
	background: #f7f7f7;		
}
#map svg {
	width: 100%;
}

path {
	fill: #e1e1e1;
	stroke: #fff;
	stroke-width: 0.5px;
	transition: fill 0.2s;
}

text {
	text-anchor: start;
	dominant-baseline: text-before-edge;
}

.europe:hover,
.asia-pacific:hover,
.americas:hover,
.africa-and-middle-east:hover {
	fill: #ccc;
}